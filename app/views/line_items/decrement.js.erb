$('#cart').html("<%=j render(@cart) %>");
if ( $('#notice').length ){
    $('#notice').css("display","none");
}

if ($('#cart tr').length == 2) { $('#cart').show(); }
if ($('#cart tr').length < 2) { $('#cart').hide(); }

$('.product_<%=@product.id%>').html("Added to cart <%= pluralize @product.popularity.to_i, 'times'%>")